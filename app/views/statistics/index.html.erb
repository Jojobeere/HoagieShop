<h1>Statistics</h1>
<table>
  <tr>
    <th>Customer</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Order Count</th>
    <th>Average Price per Order</th>
    <th>Review Count</th>
  </tr>
  <%customers = Customer.take(50)%>
  <% customers.each do |customer| %>
  <%orders = Order.where(customer_id: customer.id)%>
    <tr>
      <td><%= customer.id %></td>
      <td><%= customer.first_name%></td>
      <td><%= customer.last_name%></td>
      <td><%= Order.where(customer_id: customer.id).count.to_i %></td>
      <td><%= orders.average("price") %></td>
      <td><%= Review.where(customer_id: customer.id).count.to_i %></td>
    </tr>
  <% end %>
</table>
