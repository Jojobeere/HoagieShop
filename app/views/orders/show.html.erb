<h1>Order No. <%= @order.id %></h1>
<p>
  <strong>Your Details:</strong>
  <%= render 'customers/form' %>
</p>
<p>
<strong>Status</strong>
<%= @order.status %><br>
</p>
<p>
  <strong>Hoagies:</strong>
  <% @hoagies.each do |hoagie| %>
    <%= hoagie.count %> x
    <%= ::Base.find(hoagie.base_id).name %>
    <% OrderedAdditionally.where(hoagie_id: hoagie.id).each do |extra| %>
      + <%= Ingredient.find(extra.ingredient_id).name %><br>
    <% end %>
  <% end %>
</p>
<p>
  <strong>Price:</strong>
  <%= @order.price %> EUR<br>
</p>
<p class= "link_to"><%= link_to 'Back to Homepage', home_index_path %></p>
